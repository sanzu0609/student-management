  "item": [
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"dateOfBirth\": \"2000-01-01\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/students",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "students"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "var jsonData = pm.response.json();",
              "pm.test('Body contains id', function () {",
              "  pm.expect(jsonData.id).to.be.a('number');",
              "});",
              "pm.collectionVariables.set('studentId', jsonData.id);"
            ]
          }
        }
      ]
    },
